<?xml version="1.0" encoding="UTF-8"?>
<schema name="search_pages" version="1.5">
    <fields>
        <!-- Field Definitions -->
        <field name="collection" type="string" indexed="true" stored="true" multiValued="false" />
        <field name="content" type="text_pt" indexed="true" stored="false" multiValued="false" tokenized="true" />
        <field name="encoding" type="string" indexed="true" stored="true" multiValued="false" />
        <field name="encodingReported" type="string" indexed="true" stored="true" multiValued="false" />
        <field name="type" type="string" indexed="true" stored="false" multiValued="false" />
        <field name="typeReported" type="string" indexed="true" stored="false" multiValued="false" />
        <field name="tstamp" type="string" indexed="false" stored="true" multiValued="false" />
        <field name="date" type="date" indexed="true" stored="true" multiValued="false" docValues="true" />
        <field name="host" type="string" indexed="true" stored="false" multiValued="false" tokenized="false" />
        <field name="outlinks" type="int" indexed="false" stored="true" multiValued="false" />
        <field name="arcoffset" type="long" indexed="false" stored="true" multiValued="false" />
        <field name="arcname" type="string" indexed="true" stored="true" multiValued="false" />
        <field name="title" type="string" indexed="true" stored="true" multiValued="false" tokenized="true" />
        <field name="blocked" type="int" indexed="true" stored="true" multiValued="false" />
        <field name="urlChunks" type="string" indexed="true" stored="false" multiValued="true" />

        <!-- Add uniqueKey field if necessary -->
        <!-- <uniqueKey>field_name</uniqueKey> -->

        <!-- Default Search Field -->
        <!-- <defaultSearchField>field_name</defaultSearchField> -->

        <!-- Default Operator -->
        <!-- <solrQueryParser defaultOperator="AND/OR"/> -->
    </fields>

    <types>
        <!-- Field Type Definitions -->
        <!-- Define types like <fieldType name="text" class="solr.TextField"...> -->
        <!-- Add necessary field types here -->
        <fieldType name="string" class="solr.StrField" sortMissingLast="true" docValues="true" />
        <fieldType name="text_pt" class="solr.TextField" positionIncrementGap="100">
            <analyzer>
                <tokenizer class="solr.StandardTokenizerFactory"/>
                <filter class="solr.LowerCaseFilterFactory"/>
                <filter class="solr.PortugueseLightStemFilterFactory"/>
                <!-- less aggressive: <filter class="solr.PortugueseMinimalStemFilterFactory"/> -->
                <!-- more aggressive: <filter class="solr.SnowballPorterFilterFactory" language="Portuguese"/> -->
                <!-- most aggressive: <filter class="solr.PortugueseStemFilterFactory"/> -->
            </analyzer>
        </fieldType>
        <fieldType name="date" class="solr.DatePointField" docValues="true"/>
        <fieldType name="int" class="solr.IntPointField" docValues="true"/>
        <fieldType name="long" class="solr.LongPointField" docValues="true"/>
    </types>
</schema>

